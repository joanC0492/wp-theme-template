{
  "name": "wp-theme-template",
  "version": "1.0.0",
  "description": "![Vista previa del tema](screenshot.png)",
  "main": "index.js",
  "scripts": {
    "images": "node optimize-images.js",
    "clean": "rimraf dist",
    "sass:prod": "sass assets/scss:dist/css --style compressed --no-source-map",
    "js:prod": "node esbuild.config.js --minify",
    "sass:dev": "sass assets/scss:dist/css --style expanded --source-map",
    "js:dev": "node esbuild.config.js --watch",
    "dev": "concurrently \"npm run sass:dev --watch\" \"npm run js:dev\"",
    "build": "npm run clean && npm run sass:prod && npm run js:prod && npm run images"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joanC0492/wp-theme-template.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/joanC0492/wp-theme-template/issues"
  },
  "homepage": "https://github.com/joanC0492/wp-theme-template#readme",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "esbuild": "^0.25.8",
    "rimraf": "^6.0.1",
    "sass": "^1.89.2",
    "sharp": "^0.34.3"
  }
}
